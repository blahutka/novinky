<% if @payment %>
	<div>
		Variabilní symbol: <%= @payment.variable_symbol %>
		<br/>
		Datum vytvoření: <%= @payment.created_at.to_s(:article) %>
		<br/>
		Cena: <%= @payment.price %>
	</div>
	<% if @payment.status == Payment::VYTVORENO %>
		<%= link_to "Zaplatit znovu",:action=>"pay_method", :id=>@payment.id %>
	<% elsif @payment.web_user.expire_date %>
		Děkujeme za zaplacení, Váš účet vyprší <%= @payment.web_user.expire_date.to_s(:cz_date) %>
	<% end %>
<% end %>

