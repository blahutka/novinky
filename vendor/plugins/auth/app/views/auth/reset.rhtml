<%= form_tag %>
<%= hidden_field "post", "validkey", :value => @validkey %>
<%= hidden_field "post", "login", :value => @login %>
<% if @newuser and error_messages_for('newuser') != "" -%>
    <div class="Message"><%= error_messages_for 'newuser' %></div>
<% end -%>
<% if flash['notice'] -%>
    <div class="Message"><%= flash['notice'] %></div>
<% end -%>
		<table cellpadding="1" cellspacing="1" border="0" class="signup">

		<tr><td>
		Enter a password
		</td><td>
		<%= password_field "post", "password", :size => 20, :class=>"form" %>
		</td>
		</tr>

		<tr><td>
		Enter a password (again)
		</td><td>
		<%= password_field "post", "passwordconf", :size => 20, :class=>"form" %>
		</td>
		</tr>

		<tr><td>&nbsp;</td>
		<td style="text-align: right;">
		<input type="submit" value="Change my password &#187;" class="primary" />
		</td></tr>
		</table>

</form>
