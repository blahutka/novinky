<% if !@rel_articles.blank? %>
<ul class="list item">
		<% @rel_articles.each do |article| -%>
			<li><%= link_to article_name(article), detail_article_path(pretty_id(article)) %></li>
		<% end -%>
</ul>
<% end %>

<% if !@dailyquestions.blank? %>
<ul class="list item">
  <% @dailyquestions.each do |q| %>
    <li><%= link_to q.headline, question_vote_path(:question_id=>"#{q.id}-#{q.headline.parameterize}")%></li>
	<% end %>
</ul>
<% end %>

