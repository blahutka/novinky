<div class="box cols boxAuthor">
   <div class="col1">
     <%= main_image_tag(@author_image.data.url(:author_image)) if @author_image %>
   </div> <!-- /.col1 -->
   
   <div class="col2">
     <h2 class="head"><%= @author.full_name %></h2>
     <table>

       <tr>
		<th>E-mail</th>
		<td><%= link_to @author.email if @author.email %></td>
       </tr>
       <tr>
		<th>LinkedIn</th>
		<td><a href="">TODO</a></td>
       </tr>
       <tr>
		<th>Twitter</th>
		<td><a href="">TODO</a></td>
       </tr>
       <tr>
		<th>Mobil</th>
		<td>TODO</td>
       </tr>
     </table>       
   </div> <!-- /.col2 -->
 </div> <!-- /.cols -->
 
 <div class="box cols line">
   <div class="col1">
     <h3 class="h">Profil</h3>
     <p><%= @author.cv %></p>
   </div> <!-- /.col1 -->
   
   <div class="col2">
     <%= render :partial=>"web/articles/left_article", :collection=>@articles,:locals=>{:with_date=>true,:small_class=>false} %>
     
     <div class="paging">
       <p class="count">Zobrazeno <%= @articles.length %> / <%= @articles.total_entries %></p>
       <ul class="pages">
			<%= will_paginate @articles %>
       </ul>

     </div> <!-- /.paging -->
   
   </div> <!-- /.col2 -->
 </div> <!-- /.box -->
