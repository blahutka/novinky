<div class="box boxDetail">
   <h2 class="head">Přehled dne</h2>
   <% form_tag(archiv_path,:class=>"headForm") do %>
     <fieldset>
       <%= calendar({:text_field => "date",
              :value => @date || "1.10.2008",
              :update_div => nil,
              :class_name => "cal"}) -%>
       <%= submit_tag "Změnit", :class=>"submit" %>
     </fieldset>
   <% end %>
 </div> <!-- /.cols -->
 
 <div class="box cols line">
   <div class="col1">
     <div class="box">
       <%= render :partial=>"web/articles/left_box" %>
     </div> <!-- /.box -->
   </div> <!-- /.col1 -->
   
   <div class="col2">
   		<% if !@opinions.blank? %>
	   	<div class="box">
		   	<h2 class="h">Názory</h2>
			<div class="in">	
		     	<%= render :partial=>"web/articles/left_article",:collection=>@opinions,:locals=>{:with_date=>true,:small_class=>true} %>
			</div>
		</div>	 <!-- /.box -->
		<% end %>
		<% if !@homes.blank? %>
		<div class="box">
	        <h2 class="h line">Domov</h2>
	        <div class="in">
	        	<%= render :partial=>"web/articles/left_article",:collection=>@homes,:locals=>{:with_date=>true,:small_class=>false} %>
	        </div>
		</div> <!-- /.box -->
		<% end %>
		<% if !@worlds.blank? %>
		<div class="box">
	        <h2 class="h line">Svět</h2>
	        <div class="in">
	        	<%= render :partial=>"web/articles/left_article",:collection=>@worlds,:locals=>{:with_date=>true,:small_class=>false} %>
	        </div>
		</div> <!-- /.box -->
		<% end %>
		<% if !@arts.blank? %>
		<div class="box">
	        <h2 class="h line">Umění</h2>
	        <div class="in">
	        	<%= render :partial=>"web/articles/left_article",:collection=>@arts,:locals=>{:with_date=>true,:small_class=>false} %>
	        </div>
		</div> <!-- /.box -->
		<% end %>
		<% if !@next_pages.blank? %>	
		<div class="box">
	        <h2 class="h line">Další texty</h2>
	        <div class="in">
	        	<%= render :partial=>"web/articles/left_article",:collection=>@next_pages,:locals=>{:with_date=>true,:small_class=>false} %>
	        </div>
		</div> <!-- /.box -->
		<% end %>
		<% if !@question.blank? %>	
			<%= render :partial=>"web/articles/referendum" %>
		<% end %>
   </div> <!-- /.col2 -->
 </div> <!-- /.box -->
