<div class="item<%=small_class ? ' itemSmallImage' : '' -%>">
	<div class="img">
		<% if ((controller.action_name == "index" || @section && @section.id == Section::NAZORY) && left_article.content_type_id == ContentType::GLOSA) %>
		<% else %>
			<% if @article_photo_show %>
			  <%= article_first_photo(left_article) %>
			<% else %>
				<%= article_photo(left_article) %>
		  	<% end %>
		<% end %>
	</div> <!-- /.self -->
	
	<div class="self">
	  <p class="info">
	  	<%=th left_article.head -%>
		<% if with_date %>
			<% if @only_time %>
				<span><%= left_article.order_time.to_s(:cz_time) %></span>
			<% else %>
				<span><%= left_article.final_web_date %></span>
			<% end %>
		<% end %>
	  </p>
	  <h3 class="head">
	  	<% name = article_name(left_article) %>
		<% name = left_article.name if controller.action_name == "author_info" %>
	  	<%= link_to name, detail_article_path(pretty_id(left_article)) -%>
	  </h3>
	  <p class="perex">
	  	<%=th left_article.perex -%>
	  </p>
	</div> <!-- /.self -->
</div> <!-- /.item -->