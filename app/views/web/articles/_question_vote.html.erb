<% cond = @message || cookies["question_id_#{Time.now.to_date}"] &&  cookies["question_id_#{Time.now.to_date}"].split(';').include?(@question.id.to_s)  %>
<div class="answer">
    <div class="label">Ano</div>    
    <div class="bar">
      <span class="in" style="width: <%= cond ? @y_votes : 0 -%>%;">
      	<span class="value">
      		<% if cond  %>
			<% else %>
      			<%= link_to_remote("ano", :url=>{:controller=>"web/articles/vote", :question_id=>@question.id, :vote_value=>1}) if @question.can_vote? %>
			<% end %>
		</span>
	  </span>
    </div> <!-- /.bar -->
</div> <!-- /.answer -->
<div class="answer">
    <div class="label">Ne</div>    
    <div class="bar even">
      <span class="in" style="width: <%= cond ? @n_votes : 0-%>%;"><span class="value">
      	<% if cond %>
		<% else %>
      		<%= link_to_remote("ne", :url=>{:controller=>"web/articles/vote", :question_id=>@question.id, :vote_value=>0}) if @question.can_vote? %>
		<% end %>
	  </span></span>
	</div> <!-- /.bar -->
</div> <!-- /.answer -->
<p id="message-<%=@question.id-%>">
	<%= @message %>
</p>