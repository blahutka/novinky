<% ind = @boxes[1].index(section) %>
<% if ind != 1 %>
	<div class="item">
		<%= article_photo(section) %>
		<p class="info"><%= section.content_type.name %></p>
		<h3 class="head">
			<%= link_to section.name, articles_path(:action=>"detail",:id=>section.id) %>
		</h3>
		<p class="perex"><%=th section.perex %></p>
	</div><!-- /.item -->
<% else %>
	<div class="item itemSmall">
	  <p class="info"><%= section.content_type.name %></p>
	  <h3 class="head"><%= link_to section.name, articles_path(:action=>"detail",:id=>section.id) %></h3>
	</div> <!-- /.item -->
<% end %>