<% if @headliner_box %>
<div class="item itemBig">
  <div class="img">
  	<% if @headliner_box.article.content_type_id == ContentType::VIDEO %>
		<%= @headliner_box.article.videodata %>
	<% else %>
		<%= link_to(main_image_tag(@headliner_box.picture.data.url(:hp_main)), articles_path(:action=>"detail",:id=>@headliner_box.article.id)) %>
		<div class="caption">
	      <span><%= @headliner_box.picture_title %></span>
	    </div> <!-- /.caption -->
	<% end %>
  </div> <!-- /.img -->
  
  <div class="self">
    <h2 class="head">
    	<%= link_to @headliner_box.headline, articles_path(:action=>"detail",:id=>@headliner_box.article.id)  %>
	</h2>
    <p class="perex">
    	<%= @headliner_box.perex -%> <%= link_to "...", articles_path(:action=>"detail",:id=>@headliner_box.article.id) %>
	</p>
  </div> <!-- /.self -->
</div> <!-- /.item -->
<% end %>