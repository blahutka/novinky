<div class="box boxDetail">
   <h2 class="head"><%= @tag.name %></h2>
</div> <!-- /.cols -->
 
 <div class="box cols line">
   <div class="col1">
     <div class="box">
       <%= render :partial=>"web/articles/left_box" %>
     </div> <!-- /.box -->
     
	 <% unless @next_topics.blank? %>
     <div class="box">
       <h3 class="h line">Další témata</h3>
       <ul>
       		<% @next_topics.each do |topic| %>
			<li><%= link_to topic.name, topic_path(pretty_name(topic)) %></li>
			<% end %>
       </ul>
     </div> <!-- /.box -->
	 <% end %>
   </div> <!-- /.col1 -->
   
   <div class="col2">
     <%= render :partial=>"web/articles/left_article",:collection=>@articles,:locals=>{:with_date=>true,:small_class=>false} %>
   
     <div class="paging">
       <p class="count">Zobrazeno <%= @articles.length %> / <%= @articles.total_entries %></p>
       <ul class="pages">
			<%= will_paginate @articles %>
       </ul>
     </div> <!-- /.paging -->
   
   </div> <!-- /.col2 -->
 </div> <!-- /.box -->
