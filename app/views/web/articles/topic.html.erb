<div class="box boxDetail">
   <h2 class="head"><%= @tag.name %></h2>
</div> <!-- /.cols -->
 
 <div class="box cols line">
   <div class="col1">
     <div class="box">
       <ul>
		<li><a href="">Poslat e-mailem TODO</a></li>
		<li><a href="">Sdílet TODO</a></li>
       </ul>
     </div> <!-- /.box -->
     
     <div class="box">
       <h3 class="h line">Další témata TODO</h3>
       <ul>
       		<% @next_topics.each do |topic| %>
			<li><%= link_to topic.name %></li>
			<% end if @next_topics%>
       </ul>
     </div> <!-- /.box -->
   </div> <!-- /.col1 -->
   
   <div class="col2">
     <%= render :partial=>"web/articles/left_article",:collection=>@articles,:locals=>{:with_date=>false} %>
   
     <div class="paging">
       <p class="count">Zobrazeno <%= @articles.length %> / <%= @articles.total_entries %></p>
       <ul class="pages">
			<%= will_paginate @articles %>
       </ul>
     </div> <!-- /.paging -->
   
   </div> <!-- /.col2 -->
 </div> <!-- /.box -->
