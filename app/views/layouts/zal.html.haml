!!! Strict
%html{ html_attrs('cs') }
  %head
    %meta{ 'http-equiv' => 'content-type', :content => 'text/html', :charset => 'utf-8' }
    %meta{ 'http-equiv' => 'content-language', :content => 'cs' }
    %meta{ :name => 'author', :content => '' }
    %meta{ :name => 'copyright', :content => '' }
    %meta{ :name => 'description', :content => '' }
    %meta{ :name => 'keywords', :content => '' } 
    %title Administrace
    = stylesheet_link_tag 'admin'
    -#= javascript_include_tag :defaults, 'jquery.cluetip.js','jquery.wait.js','init.js'
  %body
    .header
      %h1.logo Logo
      = render :partial => 'shared/admin/user_info'
      = render :partial => 'shared/admin/main_navigation'
      .clearer
      #container
        = find_and_preserve yield
        #listView
          -#generovat jako partial
          .listGroup#idgroup1
            .listHeader
              %h2
                %a{ :href => '#' } Obrazky (1000)
              %span Volitelny popis sekce
              .clearer
              
              
              %h1 Listing albums

              %table
                %tr
                - @albums.each do |album|
                  %tr

                    %td= link_to 'Show', object_url(album)
                    %td= link_to 'Edit', edit_object_url(album)
                    %td= link_to 'Destroy', object_url(album), :confirm => 'Are you sure?', :method => :delete

              %br/

              =link_to 'New album', new_object_url



%tr
  %td.listItem.l4{ :colspan => '7'}
    - @pictures.each do |picture|
      .listImageBox
        = link_to image_tag(picture.photo.url(:small)), ''
        %br
        = picture.name
        %br
        = link_to 'editovat', ''
        |
        = link_to 'smazat', object_url(picture), :confirm => 'Jste si jistí?', :method => :delete  
    .clearer &nbsp;
    =link_to 'Nový obrázek', new_object_url
              
              
              
              
              
#listView
  -#generovat jako partial
  .listGroup#idgroup1
    .listHeader
      %h2.active= link_to '#', "Obrázky (#{Picture.all.length})"
      %span Volitelny popis sekce
      .clearer
    .listFilter
      %form
        %fieldset
          %strong filtr:
          %input{ :type => 'text', :name => 'groupSearch', :id => 'groupSearch' }
          %input{ :type => 'submit', :value => 'Hledej' }
    .listContent
      %table
        %tr
          %th.l1{ :width => '40%' }
            %a{ :href => '#' } name
          %th{ :width => '5%' }
            %a{ :href => '#' } size            
          %th{ :width => '10%' }
            %a{ :href => '#' } create date
          %th{ :width => '10%' }
            %a{ :href => '#' } modify date
          %th{ :width => '10%' }
            %a{ :href => '#' } author                           
          %th{ :width => '15%' }
            %a{ :href => '#' } desc
          %th{ :width => '10%' }
        %tr
          %td.listItem.l4{ :colspan => '7'}
            - @pictures.each do |picture|
              .listImageBox
                = link_to image_tag(picture.photo.url(:small)), ''
                %br
                = picture.name
                %br
                = link_to 'editovat', ''
                |
                = link_to 'smazat', object_url(picture), :confirm => 'Jste si jistí?', :method => :delete  
            .clearer &nbsp;
            =link_to 'Nový obrázek', new_object_url                                 