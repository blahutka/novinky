#listView
  -#generovat jako partial
  .listGroup#idgroup1
    .listHeader
      %h2.active
        %a{ :href => '#' } Obrazky (1000)
      %span Volitelny popis sekce
      .clearer
    .listFilter
      %form
        %fieldset
          %strong filtr:
          %input{ :type => 'text', :name => 'groupSearch', :id => 'groupSearch' }
          %input{ :type => 'submit', :value => 'Hledej' }
    .listContent
      %table
        %tr
          %th.l1{ :width => '40%' }
            %a{ :href => '#' } name
          %th{ :width => '5%' }
            %a{ :href => '#' } size            
          %th{ :width => '10%' }
            %a{ :href => '#' } create date
          %th{ :width => '10%' }
            %a{ :href => '#' } modify date
          %th{ :width => '10%' }
            %a{ :href => '#' } author                           
          %th{ :width => '15%' }
            %a{ :href => '#' } desc
          %th{ :width => '10%' }
        %tr
          %td.listItem.l4{ :colspan => '7'}
            - @pictures.each do |picture|
              .listImageBox
                = link_to image_tag(picture.photo.url(:small)), ''
                %br
                = picture.name
                %br
                = link_to 'editovat', ''
                |
                = link_to 'smazat', object_url(picture), :confirm => 'Jste si jistí?', :method => :delete  
            .clearer &nbsp;
            =link_to 'Nový obrázek', new_object_url     