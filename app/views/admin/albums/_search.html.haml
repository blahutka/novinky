- if (params[:type] == 'image')
  .listImageBox
    %div{ :id => "picture_#{search.id}"}= image_tag(search.data.url(:small))
    %br
    = search.name
    %br
    = number_to_human_size(search.data_file_size)
    ,
    = search.data_content_type
    %br
    = link_to 'editovat', '#', {:id => 'editPict', :class => "#{search.id}"}
    |
    -#= link_to 'smazat', object_url(picture), :confirm => 'Jste si jistí?', :method => :delete
    = link_to 'smazat', {:controller => 'pictures', :action => 'destroy', :id => search}, :confirm => 'Jste si jistí?', :method => :delete
- else
  %tr{ :id => "#{search.id}_pict"}
    %td.listItem{:class => "l0" }
      %div{ :id => "inset_#{search.id}"}= link_to search.name, search.data.url, :class => add_icon(search.data_content_type)
    %td= search.updated_at.strftime('%d/%m/%y') 
    %td= search.user.user_name
    %td= search.name
    %td{ :class => 'center' }
      = link_to image_tag('item-edit.gif', :size => "12x11", :alt => "Editovat"), '#', {:title => 'Editovat', :id => 'editPict', :class => "#{search.id}"}
      = link_to image_tag('delete-bin.gif', :size => "12x14", :alt => "Smazat"), {:controller => 'insets', :action => 'destroy', :id => search}, :title => 'Smazat', :confirm => 'Jste si jistí?', :method => :delete


