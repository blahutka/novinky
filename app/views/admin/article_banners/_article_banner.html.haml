    .cropLine= link_to article_banner.headline, '#', :title => article_banner.headline, :id => "edititem1_#{article_banner.id}", :onclick => "editRecord($(this), '#{@c_name}' ); return false"
  -#%td= truncate(article_banner.perex, :length => 100, :omission => "&hellip;")   
  %td= article_banner.publish_date.strftime('%d/%m/%Y')
