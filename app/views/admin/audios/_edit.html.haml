.recordHeader
  %h2= link_to 'Editovat audio soubor', '#'
.recordPath
.recordEdit  
  - form_for @audio, :url => object_url, :html => { :method => :put, :multipart => true } do |f|
    = f.error_messages
    %fieldset
      = hidden_field_tag :format, 'js'
      = render :partial => "form", :locals => { :f => f }
      %p= submit_tag "Uložit"
    -#= link_to 'Zpět', collection_url