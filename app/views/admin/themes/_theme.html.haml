%tr{ :id => "theme_#{theme.id}" }
  %td{ :class => 'listItem l1'}= link_to "#{theme.name} (#{Article.find_tagged_with(theme.name).size})", '#', :onclick => "editRecord($(this), '#{@c_name}' ); return false"
  %td= theme.updated_at.strftime('%d/%m/%y') 
  %td= theme.user.user_name
  %td= truncate(theme.description, :length => 100, :omission => "&hellip;")
  %td{ :class => 'center' }
    = link_to image_tag('item-edit.gif', :size => "12x11", :alt => "Editovat"), '#', :onclick => "editRecord($(this), '#{@c_name}' ); return false", :title => 'Editovat', :class => "edit_article"
    = link_to image_tag('delete-bin.gif', :size => "12x14", :alt => "Smazat"), '#', :title => 'Smazat'