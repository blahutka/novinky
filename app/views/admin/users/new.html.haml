#viewRecord
  .recordHeader
    %h2 Nový záznam
  .recordPath
  .recordEdit  
    - form_for @user, :url => collection_url do |f|
      = f.error_messages
      %fieldset
        = render :partial => "form", :locals => { :f => f }
        %p= submit_tag "Uložit"
      = link_to 'Zpět', collection_url