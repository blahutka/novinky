%tr{ :id => "section_#{section.id}" }
  %td{ :class => "listItem l#{section.level + 1}"}= link_to section.name, '#', :onclick => 'editSection($(this)); return false'
  %td= section.updated_at.strftime('%d/%m/%y') 
  %td= section.author.full_name
  %td= truncate(section.description, :length => 100, :omission => "&hellip;")
  %td{ :class => 'center' }
    = link_to image_tag('item-edit.gif', :size => "12x11", :alt => "Editovat"), '#', :onclick => 'editSection($(this)); return false', :title => 'Editovat', :class => "edit_article"
    = link_to image_tag('delete-bin.gif', :size => "12x14", :alt => "Smazat"), '#', :title => 'Smazat'