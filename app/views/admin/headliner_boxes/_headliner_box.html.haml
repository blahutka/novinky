%tr{ :id => "headlinerbox_#{headliner_box.id}" }
  %td{ :class => "listItem l1"}
    .cropLine= link_to headliner_box.headline, '#', :title => headliner_box.headline, :onclick => "editRecord($(this), '#{@c_name}' ); return false"
  %td
    .cropLine= truncate(headliner_box.perex, :length => 100, :omission => "&hellip;")   
  %td= headliner_box.publish_date.strftime('%d/%m/%Y')
  %td{ :class => 'center' }
    = link_to image_tag('item-edit.gif', :size => "12x11", :alt => "Editovat"), '#', :onclick => "editRecord($(this), '#{@c_name}' ); return false", :title => 'Editovat', :class => "edit_article"
    = link_to image_tag('delete-bin.gif', :size => "12x14", :alt => "Smazat"), '#', :title => 'Smazat' 