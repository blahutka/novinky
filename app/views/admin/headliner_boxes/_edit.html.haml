.recordHeader
  %h2= link_to 'Editovat headlinovy box', '#'
.recordPath
.recordEdit

  = error_messages_for :headliner_box

  - form_for @headliner_box, :url => object_url, :html => { :method => :put } do |f|
    %fieldset
      = render :partial => "form", :locals => { :f => f }
      %strong Obrazek
      .dndContent
        %div{ :class => "listFiles listImgr", :id => "filesLista_#{@object.id}" }
          %div{ :class => 'addedFile forImgr' }
            - if (@object.picture != nil)
              = image_tag(@object.picture.data.url(:small))
              %br
      .dndContainer
        %div{ :class => 'dnd imgrs headliner' } Zde pretahnete obrazek    
      .clearer &nbsp;
      #flashDiv
      %br
      %p= submit_tag "Upravit"