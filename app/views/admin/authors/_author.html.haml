%tr{ :id => "author_#{author.id}" }
  %td{ :class => 'listItem l1'}
    .cropLine= link_to author.full_name, '#', :title => author.full_name, :id => "edititem1_#{author.id}", :class => "edit_author",  :onclick => "editRecord($(this), '#{@c_name}' ); return false"
  %td
    .cropLine= author.nickname 
  %td
    .cropLine= truncate(author.cv, :length => 100, :omission => "&hellip;") 
  %td{ :class => 'center' }
    -#= link_to 'editovat', '#', :id => "editarticle_#{article.id}"
    = link_to image_tag('item-edit.gif', :size => "12x11", :alt => "Editovat"), '#', :id => "edititem2_#{author.id}", :title => 'Editovat', :class => "edit_author",  :onclick => "editRecord($(this), '#{@c_name}' ); return false"
    = link_to image_tag('delete-bin.gif', :size => "12x14", :alt => "Smazat"), '#', :title => 'Smazat'