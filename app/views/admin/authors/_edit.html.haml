.recordHeader
  %h2= link_to 'Editovat autora', '#'
.recordPath
.recordEdit
  - form_for @author, :url => object_url, :html => { :method => :put } do |f|
    %fieldset
      = render :partial => "form", :locals => { :f => f }
      %strong Obrazky
      .dndContent
        %div{ :class => "listFiles listImgr", :id => "filesLista_#{@author.id}" }
          - @author.pictures.each do |picture|
            %div{ :class => 'addedFile forImgr' }
              = image_tag(picture.data.url(:small))
              %br
              = link_to 'Odstranit', '#', :id => "img_#{picture.id}"    
      .dndContainer
        %div{ :class => 'dnd imgr', :id => "dropi_authors_#{@author.id}" } Zde pretahnete obrazek    
      .clearer &nbsp;
      %br
      %strong Soubory
      .dndContent
        %div{ :class => "listFiles listFilr", :id => "filesListb_#{@author.id}" }
          - @author.insets.each do |picture|
            %div{ :class => 'addedFile forFilr' }
              = link_to picture.name, picture.data.url, :class => 'file'
              %br
              = link_to 'Odstranit', '#', :id => "file_#{picture.id}"    
      .dndContainer
        %div{ :class => 'dnd filr', :id => "dropf_authors_#{@author.id}" } Zde pretahnete soubor    
      .clearer &nbsp;
      %p= submit_tag "Upravit"
      