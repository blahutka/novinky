%table{ :width => '100%' }
  %tr
    %th{ :width => '4%'    } &nbsp;
    %th{ :width => '56%' }= link_to 'nadpis', '#'
    %th{ :width => '20%'     }= link_to 'datum', '#'
    -#%th{ :width => '20%'    }= link_to 'autor', '#'
    = render(:partial => 'relationthemeship', :collection => @relationthemeships)
  %tr
    %td{ :colspan => '4' }
      %hr
  %tr
    %td{ :colspan => '4' }
      = @relationthemeships.current_page.to_s + ". strana" if @relationthemeships.total_entries > 0
      = will_paginate @relationthemeships, :previous_label => 'Předchozí', :next_label => 'Další'
