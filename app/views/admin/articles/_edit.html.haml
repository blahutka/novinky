.recordHeader
  %h2= link_to 'Editovat záznam', '#'
.recordPath
.recordEdit
  - form_for @article, :url => object_url, :html => { :method => :put } do |f|
    %fieldset
      = label(:article, :content_type_id, "Typ článku:", :class => "bold")
      = collection_select(:article, :content_type_id, ContentType.all, :id, :name )
      -#%strong Typ článku:
      -#= @article.content_type.name
      %br
      %br
      = render :partial => "form", :locals => { :f => f }
      = link_to "Pridat souvisejici clanky", "#?width=700&height=500", :class => 'thickbox', :onclick => 'getRelationship(\'main\'); return false', :id => "relart_#{@article.id}"
      #related_main
      - if(@article.inverse_relarticles.size > 0)
        %br
        %br
        %strong Clanky odkazujici na tento clanek
        %br
        %br
        - @article.inverse_relarticles.each do |inv|
          = inv.name
        %br
        %br        
      - if(@article.relationships.size > 0)  
        %br
        %br
        %strong Souvisejici clanky
        %br
        %br
        - @article.relationships.each do |relationship|
          %div
            = relationship.relarticle.name
            = link_to "X", '#', :id => "relationship_#{@article.id}_#{relationship.id}", :onclick => 'removeRelationship( $(this)); return false'
        %br
        %hr
        %br
      -#%div{ :class => "imageItem", :id => "filesList_#{@article.id}" }    
      %strong Obrazky
      .dndContent
        %div{ :class => "listFiles listImgr", :id => "filesLista_#{@article.id}" }
          - @article.pictures.each do |picture|
            = image_tag(picture.data.url(:small), :id => "file_#{picture.id}")
            %div{ :class => 'addedFile forImgr' }
              = image_tag(picture.data.url(:small))
              %br
              = link_to 'Odstranit', '#', :id => "img_#{picture.id}"
      .dndContainer
        -#%div{ :class => 'dnd imgr', :id => "dropi-pictures-#{@object.class.name}-#{@object.id}" } Zde pretahnete obrazek    
      .clearer &nbsp;
      %br
      %strong Soubory
      .dndContent
        %div{ :class => "listFiles listFilr", :id => "filesListb_#{@article.id}" }
          - @article.insets.each do |picture|
            -#= image_tag(picture.data.url(:small), :id => "file_#{picture.id}")
            %div{ :class => 'addedFile forFilr' }
              = link_to picture.name, picture.data.url, :class => 'file'
              %br
              = link_to 'Odstranit', '#', :id => "file_#{picture.id}"    
      .dndContainer
        %div{ :class => 'dnd filr', :id => "dropf_articles_#{@article.id}" } Zde pretahnete soubor    
      .clearer &nbsp;
      %br
      %strong Audio
      .dndContent
        %div{ :class => "listFiles listAudr", :id => "filesListc_#{@article.id}" }
          - @article.audios.each do |picture|
            -#= image_tag(picture.data.url(:small), :id => "file_#{picture.id}")
            %div{ :class => 'addedFile forAudr' }
              = link_to picture.name, picture.data.url, :class => 'file'
              %br
              = link_to 'Odstranit', '#', :id => "audio_#{picture.id}"    
      .dndContainer
        %div{ :class => 'dnd audr', :id => "dropa_articles_#{@article.id}" } Zde pretahnete audio    
      .clearer &nbsp;
      %br
      %strong Info boxy
      .dndContent
        %div{ :class => "listFiles listBoxr", :id => "filesListd_#{@article.id}" }
          - @article.info_boxes.each do |picture|
            %div{ :class => 'addedFile forBoxr' }
              = link_to picture.name, picture, :class => 'file'
              %br
              = link_to 'Odstranit', '#', :id => "box_#{picture.id}"    
      .dndContainer
        %div{ :class => 'dnd boxr', :id => "dropb_articles_#{@article.id}" } Zde pretahnete infobox    
      .clearer &nbsp;                  
      
      %p= submit_tag "Upravit"