<% if(params[:search]) %>
$("#articles .listFilter").empty();
$("#articles .listContent").empty();
<% end %>
$("#articles .listFilter").append("<%= escape_javascript(render(:partial => 'header')) %>");
$("#articles .listContent").append("<%= escape_javascript(render(:partial => 'articles_header', :object => @articles)) %>");
$("input[id='cancelSearchArticles']").bind("click", function() {
  getArticles($("#articles h2"));
  getArticles($("#articles h2"));
});
