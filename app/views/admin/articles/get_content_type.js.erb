$("div[id='nadpis-visible']").each(function() {
  if("<%= @content_type[0] %>" == '0')
	{
		$(this).hide();
	}else{
		$(this).show();
		$("input[id=article_name]").removeAttr('class');
		$("input[id=article_name]").attr({
              class: "inp countable count-<%= @content_type[0].to_s.split('/')[0]  %>-<%= @content_type[0].to_s.split('/')[1]  %>"
            })
	}
});

