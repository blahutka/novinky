.recordHeader
  %h2= link_to 'Nový článek', '#'
.recordPath
.recordEdit

  = error_messages_for :article

  - form_for @article, :url => collection_url, :html => { :multipart => true } do |f|
    %fieldset
      = label(:article, :content_type_id, "Typ článku:", :class => "bold")
      = collection_select(:article, :content_type_id, ContentType.all, :id, :name )
      %br
      %br
      = render :partial => "form", :locals => { :f => f }
      %p= submit_tag "Uložit"